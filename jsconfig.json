{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@data/*": [
                "src/data/*"
            ],
            "@features/*": [
                "src/features/*"
            ],
            "@assets/*": [
                "assets/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}